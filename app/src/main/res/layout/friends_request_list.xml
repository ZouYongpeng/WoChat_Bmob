<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/friend_request_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/login_user_head"/>

    <TextView
        android:id="@+id/friend_request_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/friend_request_head"/>

    <TextView
        android:id="@+id/friend_request_content"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/friend_request_name"
        android:layout_toRightOf="@id/friend_request_head"/>

    <Button
        android:id="@+id/friend_request_agree"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_bg"/>

</RelativeLayout>