<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--好友头像-->
    <ImageView
        android:id="@+id/message_friend_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/login_user_head"/>

    <!--消息框-->
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!--名字和向下按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_friend_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="friend"
                android:textSize="20sp"/>

            <!--向下按钮-->
            <ImageView
                android:id="@+id/message_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_message"/>

        </LinearLayout>

        <!--消息和事件-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/message_content_1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="hahahahahaha"/>
                <TextView
                    android:id="@+id/message_time_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="09:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_content_2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="hahahahahaha"/>

                <TextView
                    android:id="@+id/message_time_2"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="09:00"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_content_3"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="hahahahahaha"/>

                <TextView
                    android:id="@+id/message_time_3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="09:00"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_content_4"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="hahahahahaha"/>

                <TextView
                    android:id="@+id/message_time_4"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="09:00"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>